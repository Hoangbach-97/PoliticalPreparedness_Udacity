<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        tools:context="com.bachhoangxuan.android.politicalpreparedness.MainActivity">

        <ImageView
            android:id="@+id/homeLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ballot_logo" />

        <Button
            android:id="@+id/upcomingElectionsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_22dp"
            android:layout_marginBottom="@dimen/margin_22dp"
            android:background="@color/colorAccent"
            android:clickable="true"
            android:text="@string/upcoming_button"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/findRepsButton"
            app:layout_constraintEnd_toEndOf="@+id/homeLogo"
            app:layout_constraintStart_toStartOf="@+id/homeLogo" />


        <Button
            android:id="@+id/findRepsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_22dp"
            android:layout_marginBottom="@dimen/margin_22dp"
            android:background="@color/colorAccent"
            android:clickable="true"
            android:text="@string/find_reps_button"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/upcomingElectionsButton"
            app:layout_constraintStart_toStartOf="@+id/upcomingElectionsButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>